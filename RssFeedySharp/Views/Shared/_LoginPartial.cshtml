@if(Request.IsAuthenticated) {
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            @User.Identity.Name
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <li>
                <a href="@Url.Action("Manage", "Account")">Manage account</a>
            </li>
            <li class="divider"></li>
            <li>
                <a href="@Url.Action("LogOff", "Account")">(Log off)</a>
            </li>
        </ul>
    </li>   
} else {
    <a href="@Url.Action("Login", "Account")">Register / Login</a>
}
